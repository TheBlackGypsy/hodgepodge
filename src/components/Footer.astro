  }

  .footer-links {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: #94A3B8;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #10B981;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .input-wrapper {
    position: relative;
  }

