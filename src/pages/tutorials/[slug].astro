---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getTutorialBySlug, getAllTutorials } from '../../data/securityTutorials.ts';

export async function getStaticPaths() {
  const tutorials = getAllTutorials();
  return tutorials.map(tutorial => ({
    params: { slug: tutorial.slug },
    props: { tutorial }
  }));
}

const { slug } = Astro.params;
const tutorial = getTutorialBySlug(slug);

if (!tutorial) {
  return Astro.redirect('/404');
}
---

<Layout title={`${tutorial.title} - CyberSec Insights`} description={tutorial.excerpt}>
  <Header />
  
  <main class="tutorial-content">
    <div class="container">
      <article class="tutorial-article">
        <header class="tutorial-header">
          <div class="tutorial-meta">
            <div class="meta-badges">
              <span class={`difficulty-badge ${tutorial.difficulty.toLowerCase()}`}>
                {tutorial.difficulty}
              </span>
              <span class="steps-badge">{tutorial.steps} Steps</span>
              <span class="time-badge">{tutorial.readTime}</span>
            </div>
            <div class="tutorial-category">
              <span class="category-link">{tutorial.category}</span>
            </div>
          </div>
          
          <h1 class="tutorial-title">{tutorial.title}</h1>
          
          <div class="tutorial-info">
            <div class="author-info">
              <span class="author">By {tutorial.author}</span>
              <time class="publish-date">{tutorial.publishDate}</time>
            </div>
            
            <div class="tutorial-tags">
              {tutorial.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          </div>
        </header>

        <!-- Tutorial Overview -->
        <section class="tutorial-overview">
          <div class="overview-grid">
            <div class="overview-section">
              <h3>üìã Prerequisites</h3>
              <ul class="prerequisites-list">
                {tutorial.prerequisites.map(prereq => (
                  <li>{prereq}</li>
                ))}
              </ul>
            </div>
            
            <div class="overview-section">
              <h3>üõ†Ô∏è Tools Required</h3>
              <div class="tools-grid">
                {tutorial.tools.map(tool => (
                  <span class="tool-tag">{tool}</span>
                ))}
              </div>
            </div>
            
            <div class="overview-section">
              <h3>‚è±Ô∏è Estimated Time</h3>
              <p class="time-estimate">{tutorial.readTime}</p>
            </div>
            
            <div class="overview-section">
              <h3>üéØ Difficulty Level</h3>
              <div class="difficulty-indicator">
                <span class={`difficulty-level ${tutorial.difficulty.toLowerCase()}`}>
                  {tutorial.difficulty}
                </span>
              </div>
            </div>
          </div>
        </section>

        <!-- Tutorial Content -->
        <div class="tutorial-body">
          <Fragment set:html={tutorial.content.replace(/\n/g, '<br>')} />
        </div>

        <!-- Tutorial Navigation -->
        <footer class="tutorial-footer">
          <div class="completion-section">
            <h4>üéâ Tutorial Complete!</h4>
            <p>Congratulations on completing this tutorial. You've gained valuable cybersecurity skills that will help protect your organization.</p>
            
            <div class="next-steps">
              <h5>What's Next?</h5>
              <ul>
                <li>Practice the techniques in your own lab environment</li>
                <li>Explore related tutorials to expand your knowledge</li>
                <li>Join our community to share your experiences</li>
                <li>Stay updated with the latest security trends</li>
              </ul>
            </div>
          </div>

          <div class="share-section">
            <h4>Share this tutorial</h4>
            <div class="share-buttons">
              <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(tutorial.title)}&url=${encodeURIComponent(Astro.url.href)}`} 
                 target="_blank" class="share-btn twitter">üê¶ Twitter</a>
              <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`} 
                 target="_blank" class="share-btn linkedin">üíº LinkedIn</a>
              <a href={`mailto:?subject=${encodeURIComponent(tutorial.title)}&body=${encodeURIComponent(Astro.url.href)}`} 
                 class="share-btn email">üìß Email</a>
            </div>
          </div>

          <div class="back-to-tutorials">
            <a href="/tutorials" class="btn">‚Üê Back to All Tutorials</a>
          </div>
        </footer>
      </article>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .tutorial-content {
    padding: 2rem 0;
    min-height: 80vh;
  }

  .tutorial-article {
    max-width: 900px;
    margin: 0 auto;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 1rem;
    padding: 3rem;
    backdrop-filter: blur(10px);
  }

  .tutorial-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.1);
  }

  .tutorial-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .meta-badges {
    display: flex;
    gap: 0.5rem;
  }

  .difficulty-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .difficulty-badge.beginner {
    background: #22C55E;
    color: white;
  }

  .difficulty-badge.intermediate {
    background: #F59E0B;
    color: white;
  }

  .difficulty-badge.advanced {
    background: #EF4444;
    color: white;
  }

  .steps-badge,
  .time-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    background: rgba(148, 163, 184, 0.2);
    color: #94A3B8;
  }

  .category-link {
    color: #3B82F6;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .tutorial-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    background: linear-gradient(135deg, #E2E8F0 0%, #CBD5E1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tutorial-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author {
    color: #E2E8F0;
    font-weight: 500;
  }

  .publish-date {
    color: #64748B;
    font-size: 0.875rem;
  }

  .tutorial-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: rgba(59, 130, 246, 0.2);
    color: #60A5FA;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  /* Tutorial Overview */
  .tutorial-overview {
    margin-bottom: 3rem;
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: 0.75rem;
    padding: 2rem;
  }

  .overview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .overview-section h3 {
    color: #E2E8F0;
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .prerequisites-list {
    list-style: none;
    padding: 0;
  }

  .prerequisites-list li {
    color: #CBD5E1;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
    padding-left: 1rem;
    position: relative;
  }

  .prerequisites-list li::before {
    content: "‚úì";
    color: #10B981;
    position: absolute;
    left: 0;
  }

  .tools-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tool-tag {
    background: rgba(59, 130, 246, 0.2);
    color: #60A5FA;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
  }

  .time-estimate {
    color: #CBD5E1;
    font-size: 1.125rem;
    font-weight: 500;
  }

  .difficulty-level {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .difficulty-level.beginner {
    background: rgba(34, 197, 94, 0.2);
    color: #22C55E;
  }

  .difficulty-level.intermediate {
    background: rgba(245, 158, 11, 0.2);
    color: #F59E0B;
  }

  .difficulty-level.advanced {
    background: rgba(239, 68, 68, 0.2);
    color: #EF4444;
  }

  /* Tutorial Body */
  .tutorial-body {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #CBD5E1;
    margin-bottom: 3rem;
  }

  .tutorial-body :global(h1),
  .tutorial-body :global(h2),
  .tutorial-body :global(h3),
  .tutorial-body :global(h4),
  .tutorial-body :global(h5),
  .tutorial-body :global(h6) {
    color: #E2E8F0;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .tutorial-body :global(h2) {
    font-size: 1.75rem;
    border-bottom: 2px solid rgba(59, 130, 246, 0.3);
    padding-bottom: 0.5rem;
  }

  .tutorial-body :global(h3) {
    font-size: 1.5rem;
    color: #3B82F6;
  }

  .tutorial-body :global(ul),
  .tutorial-body :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .tutorial-body :global(li) {
    margin-bottom: 0.5rem;
  }

  .tutorial-body :global(strong) {
    color: #E2E8F0;
    font-weight: 600;
  }

  .tutorial-body :global(code) {
    background: rgba(59, 130, 246, 0.2);
    color: #60A5FA;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Fira Code', monospace;
  }

  .tutorial-body :global(pre) {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .tutorial-body :global(blockquote) {
    border-left: 4px solid #3B82F6;
    background: rgba(59, 130, 246, 0.1);
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  /* Tutorial Footer */
  .tutorial-footer {
    padding-top: 2rem;
    border-top: 1px solid rgba(148, 163, 184, 0.1);
  }

  .completion-section {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: 0.75rem;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .completion-section h4 {
    color: #10B981;
    margin-bottom: 1rem;
  }

  .completion-section p {
    color: #CBD5E1;
    margin-bottom: 1.5rem;
  }

  .next-steps h5 {
    color: #E2E8F0;
    margin-bottom: 0.75rem;
  }

  .next-steps ul {
    list-style: none;
    padding: 0;
  }

  .next-steps li {
    color: #CBD5E1;
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .next-steps li::before {
    content: "‚Üí";
    color: #10B981;
    position: absolute;
    left: 0;
  }

  .share-section {
    margin-bottom: 2rem;
  }

  .share-section h4 {
    color: #E2E8F0;
    margin-bottom: 1rem;
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .share-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: rgba(59, 130, 246, 0.2);
    color: #60A5FA;
    border-radius: 0.5rem;
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .share-btn:hover {
    background: rgba(59, 130, 246, 0.3);
    transform: translateY(-2px);
  }

  .back-to-tutorials {
    text-align: center;
  }

  @media (max-width: 768px) {
    .tutorial-article {
      padding: 2rem 1.5rem;
    }

    .tutorial-title {
      font-size: 2rem;
    }

    .tutorial-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .tutorial-info {
      flex-direction: column;
      align-items: flex-start;
    }

    .overview-grid {
      grid-template-columns: 1fr;
    }

    .tutorial-body {
      font-size: 1rem;
    }

    .share-buttons {
      justify-content: center;
    }
  }
</style>